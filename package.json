{
  "name": "@hexlet/typescript-package",
  "version": "1.1.0",
  "description": "Typescript boilerplate package",
  "author": "Hexlet",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexlet-boilerplates/typescript-package.git"
  },
  "bugs": {
    "url": "https://github.com/hexlet-boilerplates/typescript-package/issues"
  },
  "homepage": "https://github.com/hexlet-boilerplates/typescript-package#readme",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "start:dev": "npx nodemon",
    "start:dev-experimental": "node --watch --loader=ts-node/esm ./src/index.ts",
    "start": "npm run build && node dist/index.js",
    "exec": "npx ts-node ./src/index.ts",
    "lint": "npx eslint .",
    "test": "vitest",
    "test-coverage": "npx vitest run --coverage"
  },
  "simple-git-hooks": {
    "pre-push": "make lint"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.6",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.1",
    "npm-check-updates": "^16.14.6",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
